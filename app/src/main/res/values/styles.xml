<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <!--<item name="android:textSize">@dimen/textSizeNormal</item>-->
    <!--<item name="android:keyTextSize">@dimen/textSizeNormal</item>-->
    <!--<item name="android:labelTextSize">@dimen/textSizeNormal</item>-->

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="EditText.Light" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="TextLabel.TextInputError" parent="TextAppearance.Design.Hint">
        <!--<item name="android:textSize">@dimen/textInputErrorSize</item>-->
        <item name="android:textColor">#FFDD2C00</item>
    </style>

</resources>


